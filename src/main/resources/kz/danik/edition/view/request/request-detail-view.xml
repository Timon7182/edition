<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://requestDetailView.title"
      focusComponent="form">
    <data>
        <instance id="requestDc"
                  class="kz.danik.edition.entity.Request">
            <fetchPlan extends="_base">
                <property name="productRequest" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="requestDl"/>
            <collection id="productRequestDc" property="productRequest"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="requestDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textArea id="langValueRuField" height="9.5em" property="langValueRu"/>
            <checkbox id="activeField" property="active"/>
            <select id="statusField" property="status"/>
            <textField id="nameField" property="name"/>
            <textField id="emailField" property="email"/>
            <textField id="phoneField" property="phone"/>
        </formLayout>
        <h4 text="msg://kz.danik.edition.entity/Request.productRequest"/>
        <hbox id="productRequestButtonsPanel" classNames="buttons-panel">
            <button action="productRequestDataGrid.createAction"/>
            <button action="productRequestDataGrid.editAction"/>
            <button action="productRequestDataGrid.removeAction"/>
        </hbox>
        <dataGrid id="productRequestDataGrid" dataContainer="productRequestDc" width="100%" minHeight="20em">
            <actions>
                <action id="createAction" type="list_create">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="editAction" type="list_edit">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns>
                <column property="langValueRu"/>
                <column property="price"/>
                <column property="hoursFrom"/>
                <column property="hoursTo"/>
                <column property="dateFrom"/>
                <column property="dateTo"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
