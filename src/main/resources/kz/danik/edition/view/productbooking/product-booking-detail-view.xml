<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://productBookingDetailView.title"
      focusComponent="form">
    <data>
        <instance id="productBookingDc"
                  class="kz.danik.edition.entity.ProductBooking">
            <fetchPlan extends="_base">
                <property name="product" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="productBookingDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="productBookingDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textArea id="langValueRuField" height="9.5em" property="langValueRu"/>
            <checkbox id="activeField" property="active"/>
            <select id="statusField" property="status"/>
            <entityPicker id="productField" property="product">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <datePicker id="dateFromField" property="dateFrom"/>
            <datePicker id="dateToField" property="dateTo"/>
            <textField id="hoursFromField" property="hoursFrom"/>
            <textField id="hoursToField" property="hoursTo"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
