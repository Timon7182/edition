<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://dicProductCategoryDetailView.title"
      focusComponent="form">
    <data>
        <instance id="dicProductCategoryDc"
                  class="kz.danik.edition.entity.DicProductCategory">
            <fetchPlan extends="_base"/>
            <loader id="dicProductCategoryDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="dicProductCategoryDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textArea id="langValueRuField" height="9.5em" property="langValueRu"/>
            <textArea id="descriptionRuField" property="descriptionRu"/>
            <textField id="codeField" property="code"/>
            <textField id="orderField" property="order"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
