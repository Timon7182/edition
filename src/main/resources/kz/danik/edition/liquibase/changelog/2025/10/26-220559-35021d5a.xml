<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="edt">
        <addColumn tableName="EDT_REQUEST">
            <column name="EMAIL" type="VARCHAR(255)"/>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="PHONE" type="VARCHAR(255)"/>
            <column name="STATUS" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="edt">
    </changeSet>
    <changeSet id="3" author="edt">
        <addColumn tableName="EDT_PRODUCT_REQUEST">
            <column name="REQUEST_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="REQUEST_ID" tableName="EDT_PRODUCT_REQUEST"/>
    </changeSet>
    <changeSet id="4" author="edt">
        <createIndex indexName="IDX_EDT_PRODUCT_REQUEST_REQUEST" tableName="EDT_PRODUCT_REQUEST">
            <column name="REQUEST_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="REQUEST_ID" baseTableName="EDT_PRODUCT_REQUEST"
                                 constraintName="FK_EDT_PRODUCT_REQUEST_ON_REQUEST" referencedColumnNames="ID"
                                 referencedTableName="EDT_REQUEST"/>
    </changeSet>
    <changeSet id="5" author="edt">
        <dropColumn columnName="PERSON_EMAIL" tableName="EDT_PRODUCT_REQUEST"/>

        <dropColumn columnName="PERSON_NAME" tableName="EDT_PRODUCT_REQUEST"/>

        <dropColumn columnName="PERSON_PHONE" tableName="EDT_PRODUCT_REQUEST"/>

        <dropColumn columnName="PRICE" tableName="EDT_PRODUCT_REQUEST"/>
    </changeSet>
    <changeSet id="6" author="edt">
        <dropColumn columnName="PRICE_TYPE" tableName="EDT_REQUEST"/>
    </changeSet>
</databaseChangeLog>