<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="edt">
        <createTable tableName="EDT_CLIENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EDT_CLIENT"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="PHONE" type="VARCHAR(255)"/>
            <column name="EMAIL" type="VARCHAR(255)"/>
            <column name="COMMENT_" type="VARCHAR(255)"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="${offsetDateTime.type}"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="edt">
        <createTable tableName="EDT_MEETING_ROOM">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EDT_MEETING_ROOM"/>
            </column>
            <column name="CODE" type="VARCHAR(255)"/>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="LOCATION" type="VARCHAR(255)"/>
            <column name="HOURLY_RATE" type="DECIMAL(19, 2)"/>
            <column name="SORT_ORDER" type="INT"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="edt">
        <createTable tableName="EDT_ROOM_BOOKING">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EDT_ROOM_BOOKING"/>
            </column>
            <column name="ROOM_ID" type="UUID"/>
            <column name="CLIENT_ID" type="UUID"/>
            <column name="START_AT" type="${offsetDateTime.type}"/>
            <column name="END_AT" type="${offsetDateTime.type}"/>
            <column name="STATUS" type="VARCHAR(255)"/>
            <column name="COMMENT_" type="CLOB"/>
            <column name="PAYMENT_STATUS" type="VARCHAR(255)"/>
            <column name="PAYMENT_METHOD" type="VARCHAR(255)"/>
            <column name="AMOUNT" type="DECIMAL(19, 2)"/>
            <column name="PAID_AT" type="${offsetDateTime.type}"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="${offsetDateTime.type}"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="edt">
        <createIndex indexName="IDX_EDT_ROOM_BOOKING_CLIENT" tableName="EDT_ROOM_BOOKING">
            <column name="CLIENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CLIENT_ID" baseTableName="EDT_ROOM_BOOKING"
                                 constraintName="FK_EDT_ROOM_BOOKING_ON_CLIENT" referencedColumnNames="ID"
                                 referencedTableName="EDT_CLIENT"/>
    </changeSet>
    <changeSet id="5" author="edt">
        <createIndex indexName="IDX_EDT_ROOM_BOOKING_ROOM" tableName="EDT_ROOM_BOOKING">
            <column name="ROOM_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="ROOM_ID" baseTableName="EDT_ROOM_BOOKING"
                                 constraintName="FK_EDT_ROOM_BOOKING_ON_ROOM" referencedColumnNames="ID"
                                 referencedTableName="EDT_MEETING_ROOM"/>
    </changeSet>
</databaseChangeLog>