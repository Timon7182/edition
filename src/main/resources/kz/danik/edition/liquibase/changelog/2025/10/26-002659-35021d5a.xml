    <changeSet id="11" author="edt">
        <addForeignKeyConstraint baseColumnNames="PRODUCT_ID" baseTableName="EDT_PRODUCT_DIC_AMENITIES_LINK"
                                 constraintName="FK_EDTPRODICAME_ON_PRODUCT" referencedColumnNames="ID"
